<link rel="stylesheet" type="text/css" href="~/Content/DataTables/datatables.min.css" />
@{
    long? itemId = ViewBag.ItemId;
}
<div class="modal fade text-left" id="default" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">@Tax_Tech.Resources.Resource.PriceAfterTax</h4>
                <button type="button" class="close" onclick="DismissPopup()" id="addItemModalClose" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Create New Form Controls -->
            <div class="modal-body ">
                <div id="PopupMsg"></div>

                @using (Ajax.BeginForm("ItemPriceAfterTaxMaster", "Items", new { area = "Configuration", itemID = itemId },
                    new AjaxOptions
                    {
                        HttpMethod = "POST",
                        OnBegin = "ShowLoading(1)",
                        OnComplete = "showAfterPopupActionResult"
                    }, new
                    {
                        @class = "form-horizontal"
                    }))
                {
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="control-label" for="PriceAfterTax">
                                @Tax_Tech.Resources.Resource.PriceAfterTax
                                <span class="req text-danger">*</span>
                            </label>
                            <input type="number" min="0" step="any" class="form-control" placeholder="Price After Tax" name="PriceAfterTax" id="PriceAfterTax" tabindex="1">

                        </div>

                        <div class="form-group col-md-4">
                            <label class="control-label" for="PriceAfterTax">
                                @Tax_Tech.Resources.Resource.BasicPrice
                                <span class="req text-danger">*</span>
                            </label>
                            <input type="number" min="0" step="any" class="form-control" placeholder="Basic Price" name="basicPrice" id="basicPrice" tabindex="1">

                        </div>
                        <div class="form-group col-md-4">
                            <label class="control-label" for="PriceAfterTax">
                                @Tax_Tech.Resources.Resource.Distribution
                                <span class="req text-danger">*</span>
                            </label>
                            <input type="number" min="0" step="any" class="form-control" placeholder="Distrubution" name="DistributionExpenses" id="DistributionExpenses" tabindex="1">

                        </div>

                    </div>


                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="control-label" for="PriceAfterTax">
                                @Tax_Tech.Resources.Resource.T2
                                <span class="req text-danger">*</span>
                            </label>
                            <input type="number" min="0" step="any" class="form-control" placeholder="T2" name="T2" id="T2" tabindex="1">

                        </div>
                        <div class="form-group col-md-4">
                            <label class="control-label" for="PriceAfterTax">
                                @Tax_Tech.Resources.Resource.T3
                                <span class="req text-danger">*</span>
                            </label>
                            <input type="number" min="0" step="any" class="form-control" placeholder="T3" name="T3" id="T3" tabindex="1">

                        </div>
                        <div class="form-group col-md-4">
                            <label class="control-label" for="PriceAfterTax">
                                @Tax_Tech.Resources.Resource.MI02
                                <span class="req text-danger">*</span>
                            </label>
                            <input type="number" min="0" step="any" class="form-control" placeholder="M102" name="MI02" id="MI02" tabindex="1">

                        </div>

                    </div>





                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="control-label" for="PriceAfterTax">
                                @Tax_Tech.Resources.Resource.MI04
                                <span class="req text-danger">*</span>
                            </label>
                            <input type="number" min="0" step="any" class="form-control" placeholder="M104" name="MI04" id="MI04" tabindex="1">

                        </div>


                    </div>
                    <div class="row mt-2">
                        <div class="form-group col-md-12">

                            <button type="submit" class="btn btn-primary" id="subBtn-1" tabindex="6">@Tax_Tech.Resources.Resource.Save</button>
                            <div class="form-group">
                                <button id="loadBtn-1" class="btn btn-outline-primary mt-3 waves-effect hidden btn-load" type="button" disabled="">
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="ml-25 align-middle">@Tax_Tech.Resources.Resource.Loading...</span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
                <div id="priceHistoryList">

                </div>
            </div>
        </div>
    </div>
</div>

