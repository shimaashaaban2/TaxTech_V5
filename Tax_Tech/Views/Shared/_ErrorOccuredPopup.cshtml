
<div class="modal fade text-left" id="default" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">@Tax_Tech.Resources.Resource.ErrorOccured</h4>
                <button type="button" class="close" onclick="DismissPopup()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Create New Form Controls -->
            <div class="modal-body">
                <div class="d-flex justify-content-start align-items-center my-3">
                    <div class="avatar avatar-lg bg-danger shadow">
                        <div class="avatar-content">
                            <span class="font-large-2">X</span>
                        </div>
                    </div>
                    <div class="ml-2">
                        @if (ViewBag.ErrorMsg == null)
                        {
                            <h4 class="req text-center">@Tax_Tech.Resources.Resource.InvalidDataProvided</h4>
                        }
                        else
                        {
                            <h6 class="text-center req">@ViewBag.ErrorMsg</h6>
                        }
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-outline-danger w-25" onclick="DismissPopup()">@Tax_Tech.Resources.Resource.Ok</button>
                </div>
            </div>
        </div>
    </div>
</div>