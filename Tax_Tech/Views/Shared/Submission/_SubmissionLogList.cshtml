
@model List<Tax_Tech.ViewModels.SubmissionLogsViewModel>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-responsive-xl table-bordered" id="thebasic-datatable2">
    <thead>
        <tr>
            <th width="20%">@Tax_Tech.Resources.Resource.DocumentInfo</th>
            <th width="10%">@Tax_Tech.Resources.Resource.SignStatus</th> 
            <th width="35%"  style="width:20px">@Tax_Tech.Resources.Resource.Result</th>
            <th width="35%">@Tax_Tech.Resources.Resource.Code</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
        <tr>
            <td width="20%">
                <span class="text-dark">@Tax_Tech.Resources.Resource.DocID:</span>   @item.DocID <br />
                <span class="text-dark">@Tax_Tech.Resources.Resource.InternalID:</span>  @item.internalID <br />
                  <span class="text-dark">@Tax_Tech.Resources.Resource.Date:</span>  @Convert.ToDateTime(item.RequestDate).ToShortDateString()
            </td>
            <td width="10%">@Tax_Tech.Helpers.LookupsHelper.GetLookups().SubmissionSignStatus(item.SignStatus) </td>            
            <td width="35%" style="width:20px">@item.Response</td>
            <td width="35%"> @item.SignCode</td>
        </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">
                        <h5 class="text-center">@Tax_Tech.Resources.Resource.NoDataAvailable</h5>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
    $('#thebasic-datatable2').DataTable({ "pageLength": 100, "order": [[1, 'dasc']]});
</script>