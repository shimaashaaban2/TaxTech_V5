@{
    long? docID = ViewBag.DocID;
}

<div class="modal fade text-left" id="default" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">@Tax_Tech.Resources.Resource.AddExtraDiscount</h4>
                <button type="button" class="close" data-dismiss="modal" id="addExtraDiscountClose" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div id="PopupMsg"></div>

                @using (Ajax.BeginForm("UpdateInvoiceTotals", new { controller = "InvoiceLine", area = "" },
                    new AjaxOptions
                    {
                        UpdateTargetId = "PopupMsg",
                        InsertionMode = InsertionMode.Replace,
                        OnBegin = "ShowLoading(1)",
                        OnComplete = "showUpdateTotalResult",

                    }))
                {
                    <input type="hidden" name="documentId" id="documentId" value="@docID" />

                    <div class="form-group">
                        <input class="form-control" step="0.00001" autofocus placeholder="@Tax_Tech.Resources.Resource.ExtraDiscount" type="number" name="extraDiscount" />
                    </div>

                    <div class="row mt-2">
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary btn-submit" tabindex="28" id="subBtn-1">@Tax_Tech.Resources.Resource.Save</button>
                            <div class="form-group">
                                <button id="loadBtn-1" class="btn btn-outline-primary waves-effect hidden btn-load" type="button" disabled="">
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="ml-25 align-middle">@Tax_Tech.Resources.Resource.Loading...</span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>