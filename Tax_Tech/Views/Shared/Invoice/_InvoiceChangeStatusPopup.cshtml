@{
    var docID = ViewBag.DocID;
    List<Tax_Tech.ApiModels.ProcessStatus> docStatusList = ViewBag.ProcessStatusList;
}

<div class="modal fade text-left" id="default" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">@Tax_Tech.Resources.Resource.ChangeDocStatus</h4>
                <button type="button" class="close" data-dismiss="modal" id="ChangeStatusClose" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div id="PopupMsg"></div>

                @using (Ajax.BeginForm("ChangeInvoiceStatusInPlace", new { controller = "Invoice", area = "" },
                    new AjaxOptions
                    {
                        OnBegin = "ShowLoading(1)",
                        OnComplete = "changeInvoiceStatusResult",

                    }))
                {
                    <input type="hidden" name="DocumentId" id="DocumentId" value="@docID" />

                    <div class="row">
                        <div class="col-md-12">
                            @Html.Partial("Lookups/_ProcessStatusList", docStatusList)
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="form-group col-md-12">
                            <textarea class="form-control" placeholder="@Tax_Tech.Resources.Resource.RejectReason" name="msg" id="msg" tabindex="1" autofocus></textarea>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary btn-submit" tabindex="28" id="subBtn-1">@Tax_Tech.Resources.Resource.Confirm</button>
                            <div class="form-group">
                                <button id="loadBtn-1" class="btn btn-outline-primary waves-effect hidden btn-load" type="button" disabled="">
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="ml-25 align-middle">@Tax_Tech.Resources.Resource.Loading...</span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>