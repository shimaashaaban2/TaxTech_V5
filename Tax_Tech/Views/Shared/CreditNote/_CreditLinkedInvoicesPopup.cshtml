@{
    string creditNoteID = ViewBag.CreditNoteID;
}

<div class="modal fade text-left" id="default" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">@Tax_Tech.Resources.Resource.LinkedInvoices</h4>
                <button type="button" class="close" data-dismiss="modal" id="addNewInvoiceLineModalClose" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div id="PopupMsg"></div>
                <div>
                    <div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control" name="CreditNotInternalID" id="CreditNotInternalID" placeholder="@Tax_Tech.Resources.Resource.InternalID" />
                            </div>

                            <div class="form-group col-md-4">
                                <button class="btn btn-primary" id="btnCheck" onclick="getDocByInternalID(event)">@Tax_Tech.Resources.Resource.Check</button>
                            </div>
                        </div>

                        <div id="list2" class="mt-2">
                            <h4 class="text-center">@Tax_Tech.Resources.Resource.Loading...</h4>
                        </div>

                        <div class="row mt-2">
                            <div class="col-md-12">
                                <button class="btn btn-primary" onclick="submitLinkedInvoices(event, '@creditNoteID')">@Tax_Tech.Resources.Resource.Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    getLinkedInvoices('@creditNoteID');
</script>