@using Tax_Tech.Helpers;
@{
    ViewBag.Title = @Tax_Tech.Resources.Resource.ForgetMyPassword;
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
    SelectList EntitiesList = LookupsHelper.GetLookups().EntitiesList(null);
}
<div class="col-md-3 col-12"></div>

<div class="col-md-6 col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title"> @Tax_Tech.Resources.Resource.ForgetPasswordEmail</h4>
        </div>
        <div class="card-body">
            @using (Ajax.BeginForm("SendForgetPasswordEmail", new { controller = "Accounts", area = "" },
            new AjaxOptions
            {
                UpdateTargetId = "Msg",
                InsertionMode = InsertionMode.Replace,
                OnBegin = "ShowLoading(1)",
                OnComplete = "HideLoading(1)",

            }
            ))
            {
                <div class="row">

                    <div class="col-12">
                        <div id="Msg"></div>
                        <div class="form-group">
                            <label class="form-label" for="login-username">@Tax_Tech.Resources.Resource.Entity<span class="text-danger">*</span></label>
                            @{ if (EntitiesList != null)
            {
                    @Html.DropDownList("EntityId", LookupsHelper.GetLookups().EntitiesList(null) as SelectList, Tax_Tech.Resources.Resource.Entity,
new
{
   @class = "select2 form-control",
   @style = "width  100%;",
   @tabindex = "3"
})
}
else
{
                    <h5 class="text-danger">@Tax_Tech.Resources.Resource.ApiDown</h5>
}}

                        </div>
                        <div class="form-group">

                            <label for="email-id-icon">@Tax_Tech.Resources.Resource.Email <span style="color:red">*</span></label>

                            <div class="input-group input-group-merge">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg></span>
                                </div>
                                <input type="email" id="email" class="form-control" name="email" placeholder="@Tax_Tech.Resources.Resource.Email">
                            </div>
                        </div>
                    </div>


                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block" tabindex="4" id="subBtn-1">@Tax_Tech.Resources.Resource.Send</button>
                        <button id="loadBtn-1" class="btn btn-outline-primary waves-effect hidden btn-load" style="width:100%" type="button" disabled="">
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="ml-25 align-middle">@Tax_Tech.Resources.Resource.Loading...</span>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="col-md-3 col-12"></div>