
@{
    ViewBag.Title = @Tax_Tech.Resources.Resource.TotalReports;

}

<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h4 id="totalCount"></h4>
                    </div>
                </div>



                @using (Ajax.BeginForm("FilteredTotalReports", "EReceipt", new { area = "" },
               new AjaxOptions
               {
                   HttpMethod = "Post",
                   OnBegin = "OnGetTotalReportsListByFilterShowLoader",
                   OnComplete = "OnGetTotalReportsListByFilterHideLoader"

               }, new
               {
                   @class = "form-horizontal"
               }))
                {
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label> @Tax_Tech.Resources.Resource.From </label>
                            <input type="text" class="form-control flatpickr-basic flatpickr-input active" name="From" id="From" placeholder="@Tax_Tech.Resources.Resource.From" value="@DateTime.Now.ToString("yyyy-MM-dd")" />@*value="@DateTime.Now.AddDays(-7).ToString("yyyy-MM-dd")"*@
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>@Tax_Tech.Resources.Resource.To</label>
                            <input type="text" class="form-control flatpickr-basic flatpickr-input active" name="To" id="To" placeholder="@Tax_Tech.Resources.Resource.To" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
        

                    <div class="row">
                        <div class="form-group col-md-12">
                            <button class="btn btn-primary col-md-12" id="btn-ReportGetList" type="submit">@Tax_Tech.Resources.Resource.Get</button>
                            <button class="btn btn-outline-primary waves-effect btn-block" style="display: none;" id="btn-ReportGetList-loader" type="button" disabled="">
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span class="ml-25 align-middle">@Tax_Tech.Resources.Resource.Loading</span>
                            </button>
                        </div>

                    </div>


                }


                @*<div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-outline-primary col-md-12" id="btnExportToExecl">@Tax_Tech.Resources.Resource.ExportToExcel</button>
                            <button class="btn btn-outline-primary waves-effect btn-block" style="display: none;" id="btnExportToExecl-loader" type="button" disabled="">
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span class="ml-25 align-middle">@Tax_Tech.Resources.Resource.Loading</span>
                            </button>
                        </div>
                    </div>*@
            </div>
        </div>
    </div>


    <div class="col-9">
        <div class="card">
            <div class="card-body">
                <div id="errMsg"></div>
                <div id="Report-List">
                    <h4 class="text-center"></h4>
                </div>
            </div>
        </div>
    </div>

</div>


