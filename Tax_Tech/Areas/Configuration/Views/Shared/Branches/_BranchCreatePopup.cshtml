@using Tax_Tech.Helpers;
@{
    List<Tax_Tech.ApiModels.Country> countries = ViewBag.Countries;
    List<Tax_Tech.ApiModels.VendorType> branchTypes = ViewBag.BranchTypes;
    SelectList EntitiesList = LookupsHelper.GetLookups().EntitiesList(null);
}
<div class="modal fade text-left" id="default" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">@Tax_Tech.Resources.Resource.AddnewBranch</h4>
                <button type="button" class="close" onclick="DismissPopup()" id="addBranchModalClose" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Create New Form Controls -->
            <div class="modal-body">
                <div id="PopupMsg"></div>

                @using (Ajax.BeginForm("CreateBranch", "Branches", null,
            new AjaxOptions
            {
                HttpMethod = "POST",
                OnBegin = "ShowLoading(1)",
                OnComplete = "showPopUpResult"
            }, new
            {
                @class = "form-horizontal"
            }))
                {
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="control-label" for="BranchCode">
                                @Tax_Tech.Resources.Resource.BranchID
                                <span class="req">*</span>
                            </label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.BranchID" name="BranchCode" id="BranchCode" tabindex="1" />
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label" for="BranchName">
                                <span class="req">*</span>
                                @Tax_Tech.Resources.Resource.BranchName
                            </label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.BranchName" name="BranchName" id="BranchName" tabindex="2" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="control-label" for="BranchAPIType">
                                <span class="req">*</span>
                                @Tax_Tech.Resources.Resource.BranchType
                            </label>
                            @if (branchTypes != null)
                            {
                                @Html.DropDownList("BranchAPIType", new SelectList(branchTypes, "VendorTypeID", "VendorTypeList"), Tax_Tech.Resources.Resource.BranchType, new { @class = "form-control form-control-md select2", tabindex = "4", @onchange = "GetRegInfo()" })
                            }
                            else
                            {
                                <div class="req">@Tax_Tech.Resources.Resource.ApiDown</div>
                            }
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label" for="PersonalID">
                                @Tax_Tech.Resources.Resource.RegInfo
                                <span class="req">*</span>
                            </label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.RegInfo" name="PersonalID" id="PersonalID" tabindex="3" />
                        </div>


                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="control-label" for="CountryID">
                                <span class="req">*</span>
                                @Tax_Tech.Resources.Resource.Country
                            </label>
                            @if (countries != null)
                            {
                                @Html.DropDownList("CountryID", new SelectList(countries, "CountryID", "CountryName"), Tax_Tech.Resources.Resource.Country, new { @class = "form-control form-control-md select2", tabindex = "5" })
                            }
                            else
                            {
                                <div class="req">@Tax_Tech.Resources.Resource.ApiDown</div>
                            }
                        </div>

                        <div class="form-group col-md-4">
                            <label class="control-label" for="Governate">
                                <span class="req">*</span>
                                @Tax_Tech.Resources.Resource.Governate
                            </label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.Governate" name="Governate" id="Governate" tabindex="6" />
                        </div>

                        <div class="form-group col-md-4">
                            <label class="control-label" for="RegionCity">
                                <span class="req">*</span>
                                @Tax_Tech.Resources.Resource.City
                            </label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.City" name="RegionCity" id="RegionCity" tabindex="7" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="control-label" for="Street">
                                <span class="req">*</span>
                                @Tax_Tech.Resources.Resource.Street
                            </label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.Street" name="Street" id="Street" tabindex="8" />
                        </div>

                        <div class="form-group col-md-4">
                            <label class="control-label" for="BuildingNo">
                                <span class="req">*</span>
                                @Tax_Tech.Resources.Resource.BuildingNo
                            </label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.BuildingNo" name="BuildingNo" id="BuildingNo" tabindex="9" />
                        </div>

                        <div class="form-group col-md-4">
                            <label class="control-label" for="PostalCode">@Tax_Tech.Resources.Resource.PostalCode</label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.PostalCode" name="PostalCode" id="PostalCode" tabindex="10" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="control-label" for="Floor">@Tax_Tech.Resources.Resource.Floor</label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.Floor" name="Floor" id="Floor" tabindex="11" />
                        </div>

                        <div class="form-group col-md-4">
                            <label class="control-label" for="Flat">@Tax_Tech.Resources.Resource.Flat</label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.Flat" name="Flat" id="Flat" tabindex="12" />
                        </div>

                        <div class="form-group col-md-4">
                            <label class="control-label" for="Landmark">@Tax_Tech.Resources.Resource.Landmark</label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.Landmark" name="Landmark" id="Landmark" tabindex="13" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label class="control-label" for="AdditionalInformation">@Tax_Tech.Resources.Resource.AddtionalInfo</label>
                            <textarea class="form-control" id="AdditionalInformation" name="AdditionalInformation" placeholder="@Tax_Tech.Resources.Resource.AddtionalInfo" tabindex="14"></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="control-label" for="ERPInternalID">
                                <span class="req">*</span>
                                @Tax_Tech.Resources.Resource.ERPID
                            </label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.ERPID" name="ERPInternalID" id="ERPInternalID" tabindex="15" />
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label" for="ERPInternalID">
                                <span class="req">*</span>
                                @Tax_Tech.Resources.Resource.Entity
                            </label>
                            @{ if (EntitiesList != null)
                                {
                                    @Html.DropDownList("EntityID", EntitiesList as SelectList, Tax_Tech.Resources.Resource.Entity,
                           new
                           {
                               @class = "select2 form-control",
                               @style = "width  100%;",
                               @tabindex = "3"
                           })
                                }
                                else
                                {
                                    <h5 class="text-danger">@Tax_Tech.Resources.Resource.ApiDown</h5>
                                }}
                        </div>

                    </div>

                    <div class="row mt-2">
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary" id="subBtn-1" tabindex="16">@Tax_Tech.Resources.Resource.AddnewBranch</button>
                            <div class="form-group">
                                <button id="loadBtn-1" class="btn btn-outline-primary waves-effect hidden btn-load" type="button" disabled="">
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="ml-25 align-middle">@Tax_Tech.Resources.Resource.Loading...</span>
                                </button>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

<script>
    $('.select2').each(function () {
        var $this = $(this);
        $this.wrap('<div class="position-relative"></div>');
        $this.select2({
            // the following code is used to disable x-scrollbar when click in select input and
            // take 100% width in responsive also
            dropdownAutoWidth: true,
            width: '100%',
            dropdownParent: $this.parent()
        });
    });
</script>