    <div class="card-body" style="overflow-x: auto">
        <div class="row">
            <div class="form-group col-md-2">
                <label class="control-label" for="DefaultActivityCode">
                    @Tax_Tech.Resources.Resource.DefaultActivityCode
                    <span class="req">*</span>
                </label>
            </div>

            <div class="form-group col-md-6">
                <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.Enter Default Activity Code" name="DefaultActivityCode" id="DefaultActivityCode" value="@Model.DefaultActivityCode" tabindex="1" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-2">
                <label class="control-label" for="DocumentVersion">
                    @Tax_Tech.Resources.Resource.DocumentVersion
                    <span class="req">*</span>
                </label>
            </div>
            <div class="form-group col-md-6">
               
                <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.Enter Document Version" name="DocumentVersion" id="DocumentVersion" value="@Model.DocumentVersion" tabindex="2" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-2">  </div>
            <div class="form-group col-md-6">
                <br />
                <button type="submit" class="btn btn-primary btn-block" tabindex="4" id="subBtn-2" onclick="PostMOFData(2)">@Tax_Tech.Resources.Resource.Save</button>
                <button id="loadBtn-2" class="btn btn-outline-primary waves-effect hidden btn-load" style="width:100%" type="button" disabled="">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="ml-25 align-middle">@Tax_Tech.Resources.Resource.Loading...</span>
                </button>
            </div>
        </div>
    </div>

</div>
