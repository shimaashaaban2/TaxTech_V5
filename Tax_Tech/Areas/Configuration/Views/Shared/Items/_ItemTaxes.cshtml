@{
    List<Tax_Tech.ApiModels.TaxType> taxTypes = ViewBag.Taxes;
    List<Tax_Tech.ViewModels.ItemsTaxViewModel> itemTaxes = ViewBag.ItemTaxes;
    int? itemId = ViewBag.ItemId;
}

<div class="modal fade text-left" id="default" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">@Tax_Tech.Resources.Resource.ItemTaxes</h4>
                <button type="button" class="close" onclick="DismissPopup()" id="ItemTaxesModalClose" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Create New Form Controls -->
            <div class="modal-body">
            <div id="PopupMsg"></div>

                @using (Ajax.BeginForm("AddTaxToItem", "Items", null,
            new AjaxOptions
            {
                HttpMethod = "POST",
                OnBegin = "ShowLoading(1)",
                OnComplete = "onAddTaxtoItem"
            }, new
            {
                @class = "form-horizontal"
            }))
                {
                    <input type="hidden" name="ItemID" value="@itemId" />

                    <div class="row">
                        <div class="form-group col-md-5">
                            <label class="control-label" for="TaxID">@Tax_Tech.Resources.Resource.TaxType</label>
                            @if (taxTypes != null)
                            {
                                @Html.DropDownList("TaxID", new SelectList(taxTypes, "TaxTypeID", "TaxTypeNameEN"), Tax_Tech.Resources.Resource.TaxType, new { @class = "form-control form-control-md select2", tabindex = "1", oninput = "getTaxSubTypes(event)" })
                            }
                            else
                            {
                                <div class="req">@Tax_Tech.Resources.Resource.ApiDown</div>
                            }
                        </div>

                        <div class="col-md-5" id="taxSubTypesContainer">

                        </div>

                        <div class="form-group col-md-2 mt-2">
                            <button type="submit" class="btn btn-primary" id="subBtn-1" tabindex="2">@Tax_Tech.Resources.Resource.AddTax</button>
                            <div class="form-group">
                                <button id="loadBtn-1" class="btn btn-outline-primary waves-effect hidden btn-load" type="button" disabled="">
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="ml-25 align-middle">@Tax_Tech.Resources.Resource.Loading...</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>@Tax_Tech.Resources.Resource.PrimaryTax</th>
                                        <th>@Tax_Tech.Resources.Resource.SubTax</th>
                                        <th>@Tax_Tech.Resources.Resource.Value</th>
                                        <th>@Tax_Tech.Resources.Resource.Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="itemsListContainer">
                                    @Html.Partial("~/Areas/Configuration/Views/Shared/Items/_ItemTaxesList.cshtml", itemTaxes)
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    $('.select2').each(function () {
        var $this = $(this);
        $this.wrap('<div class="position-relative"></div>');
        $this.select2({
            // the following code is used to disable x-scrollbar when click in select input and
            // take 100% width in responsive also
            dropdownAutoWidth: true,
            width: '100%',
            dropdownParent: $this.parent()
        });
    });
</script>