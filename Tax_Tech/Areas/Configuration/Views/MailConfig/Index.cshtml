@model List<Tax_Tech.Areas.Configuration.ViewModels.MailListViewModel>

@{
    ViewBag.Title = Tax_Tech.Resources.Resource.MailConfig;
}

<section>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="dt-action-buttons text-left d-flex">
                        <div id="main-err"></div>
                    </div>
                </div>

                <div class="card-body" id="list" style="overflow-x: auto">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-responsive-xl" id="thebasic-datatable">
                        <thead>
                            <tr>
                                <th>@Tax_Tech.Resources.Resource.FriendlyName</th>
                                <th>@Tax_Tech.Resources.Resource.Email</th>
                                <th>@Tax_Tech.Resources.Resource.Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.GroupName</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <button class="btn btn-success" onclick="getEditMailConfigModal('@item.GroupID')">@Tax_Tech.Resources.Resource.Edit</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td class="text-center" colspan="3">@Tax_Tech.Resources.Resource.NoDataAvailable</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/Custom/PublicConfig.js"></script>
