@model List<Tax_Tech.ViewModels.BranchViewModel>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-responsive-xl" id="thebasic-datatable" style="box-sizing: padding-box">
    <thead>
        <tr>
            <th>@Tax_Tech.Resources.Resource.ERPID</th>
            <th>@Tax_Tech.Resources.Resource.RegInfo</th>
            <th>@Tax_Tech.Resources.Resource.BranchID</th>
            <th>@Tax_Tech.Resources.Resource.BranchName</th>
            <th>@Tax_Tech.Resources.Resource.Entity</th> 
            <th>@Tax_Tech.Resources.Resource.Status</th>
            <th>@Tax_Tech.Resources.Resource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.ERPInternalID
                        </td>
                        <td>
                            @item.PersonalID
                        </td>
                        <td>
                            @item.BranchCode
                        </td>
                        <td>
                            @item.BranchName
                        </td>
                        <td>
                            @item.EntityTitle
                        </td>
                       
                        <td>
                            @if (item.IsActive.HasValue && item.IsActive.Value)
                            {
                                <span>@Tax_Tech.Resources.Resource.Active</span>
                            }
                            else
                            {
                                <span>@Tax_Tech.Resources.Resource.InActive</span>
                            }
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn btn-sm dropdown-toggle hide-arrow" data-toggle="dropdown">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-vertical"><circle cx="12" cy="12" r="1"></circle><circle cx="12" cy="5" r="1"></circle><circle cx="12" cy="19" r="1"></circle></svg>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="javascript:void(0);" onclick="getUpdateBranchModal('@item.BranchID')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg>
                                        <span>@Tax_Tech.Resources.Resource.Edit</span>
                                    </a>

                                    @if (item.IsActive.HasValue && !item.IsActive.Value)
                                    {
                                        @Ajax.ActionLink(Tax_Tech.Resources.Resource.SetAsActive, "ChangeStatus", "Branches", new { area = "Configuration", branchId = item.BranchID, status = true }, new AjaxOptions
                                        {
                                            UpdateTargetId = "list",
                                            OnBegin = "ShowLoading(0)",
                                            InsertionMode = InsertionMode.Replace,
                                            HttpMethod = "POST",
                                            OnComplete = "showDeleteResult"
                                        }, new { @class = "dropdown-item" })
                                    }
                                    else
                                    {
                                        @Ajax.ActionLink(Tax_Tech.Resources.Resource.SetInActive, "ChangeStatus", "Branches", new { area = "Configuration", branchId = item.BranchID, status = false }, new AjaxOptions
                                        {
                                            UpdateTargetId = "list",
                                            OnBegin = "ShowLoading(0)",
                                            InsertionMode = InsertionMode.Replace,
                                            HttpMethod = "POST",
                                            OnComplete = "showDeleteResult",
                                            Confirm = Tax_Tech.Resources.Resource.AreyouSuretoSetInactive
                                        }, new { @class = "dropdown-item" })
                                    }

                                    @*<a class="dropdown-item" href="javascript:void(0);" onclick="makeDefault('@item.BranchID')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg>
                                        <span>Make Default</span>
                                    </a>*@
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        <h5 class="text-center">@Tax_Tech.Resources.Resource.NoDataAvailable</h5>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>