@{
    List<Tax_Tech.ApiModels.UnitType> unitTypes = ViewBag.UnitTypes;
    List<object> itemTypes = ViewBag.ItemTypes;
    List<Tax_Tech.Areas.Configuration.ViewModels.EntityViewModel> entities = ViewBag.EntitiesList;
}
<div class="modal fade text-left" id="default" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">@Tax_Tech.Resources.Resource.AddNewItem</h4>
                <button type="button" class="close" onclick="DismissPopup()" id="addItemModalClose" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Create New Form Controls -->
            <div class="modal-body">
            <div id="PopupMsg"></div>

                @using (Ajax.BeginForm("CreateItem", "Items", new { area = "Configuration" },
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    OnBegin = "ShowLoading(1)",
                    OnComplete = "onAddItem"
                }, new
            {
                @class = "form-horizontal"
            }))
                {
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="control-label" for="ItemCode">@Tax_Tech.Resources.Resource.ItemCode
                            <span class="req">*</span></label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.ItemCode" name="ItemCode" id="ItemCode" tabindex="1" />
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label" for="ItemName">@Tax_Tech.Resources.Resource.ItemName
                            <span class="req">*</span></label>
                            <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.ItemName" name="ItemName" id="ItemName" tabindex="2" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="control-label" for="ItemUnitID">@Tax_Tech.Resources.Resource.UnitType
                            <span class="req">*</span></label>
                            @if (unitTypes != null)
                            {
                                @Html.DropDownList("ItemUnitID", new SelectList(unitTypes, "UnitID", "UnitTitleEN"), Tax_Tech.Resources.Resource.UnitType, new { @class = "form-control form-control-md select2", tabindex = "3" })
                            }
                            else
                            {
                                <div class="req">@Tax_Tech.Resources.Resource.ApiDown</div>
                            }
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label" for="ItemType">@Tax_Tech.Resources.Resource.ItemType
                            <span class="req">*</span></label>
                            @if (itemTypes != null)
                            {
                                @Html.DropDownList("ItemType", new SelectList(itemTypes, "Id", "Name"), Tax_Tech.Resources.Resource.ItemType, new { @class = "form-control form-control-md select2", tabindex = "4" })
                            }
                            else
                            {
                                <div class="req">@Tax_Tech.Resources.Resource.ApiDown</div>
                            }
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="control-label" for="EntityId">
                                @Tax_Tech.Resources.Resource.Entity
                                <span class="req">*</span>
                            </label>
                            @Html.DropDownList("EntityId", new SelectList(entities, "EntityId", "EntityTitle"), Tax_Tech.Resources.Resource.Entity,
                            new
                            {
                                @class = "select2 form-control",
                                @style = "width  100%;",
                                @tabindex = "5"
                            })
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label" for="ItemERPID">
                                @Tax_Tech.Resources.Resource.ERPID
                            <span class="req">*</span>
                        </label>
                        <input type="text" class="form-control" placeholder="@Tax_Tech.Resources.Resource.ERPID" name="ItemERPID" id="ItemERPID" tabindex="6" />
                    </div>
                    </div>

                    <div class="row mt-2">
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary" id="subBtn-1" tabindex="6">@Tax_Tech.Resources.Resource.AddNewItem</button>
                            <div class="form-group">
                                <button id="loadBtn-1" class="btn btn-outline-primary waves-effect hidden btn-load" type="button" disabled="">
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="ml-25 align-middle">@Tax_Tech.Resources.Resource.Loading...</span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    $('.select2').each(function () {
        var $this = $(this);
        $this.wrap('<div class="position-relative"></div>');
        $this.select2({
            // the following code is used to disable x-scrollbar when click in select input and
            // take 100% width in responsive also
            dropdownAutoWidth: true,
            width: '100%',
            dropdownParent: $this.parent()
        });
    });
</script>